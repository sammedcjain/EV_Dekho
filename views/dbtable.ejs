}


  .navbar{
    margin-bottom:50px;
    background: #1A1A1A;
  }
  .navbar-brand {
    color:lightgreen;
    font-weight: bold;
    font-size: 2rem;
  }

  .nav-link {
    color:lightgreen;
    font-weight: bold;
    font-size: 1.2rem;
    margin-left: 1.5rem;
  }
  .nav-link:hover {
    color:green;
  }
  .navbar-brand:hover{
    color:green;
  }

  @media (max-width: 768px) {
    .navbar-nav {
      flex-direction: column;
      align-items: center;
    }

    .nav-link {
      margin-left: 0;
      margin-top: 1rem;
    }
  }

  /* footer css */

  footer {
      background: #3e8e41;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60px 0;
    margin-top:50px;
  }

  #footer .container {
