    justify-content: center;
    margin-bottom: 30px;
  }

  .social-icons a {
    color: #333333;
    font-size: 24px;
    margin-right: 10px;
    transition: color 0.3s ease-in-out;
  }

  .social-icons a:hover {
    color: white;
  }

  #footer p {
    margin: 0;
    font-size: 18px;
    color: #333333;
  }

  @media screen and (max-width: 768px) {
    /* adjust layout for smaller screens */
    #footer h1 {
      font-size: 36px;
    }

    #footer h2 {
