    <style>

    .hidden{
      display:none
    }
    body {
       font-family: 'Roboto', sans-serif;
      background-color: #000;
      color: #fff;
    }

    h1,
    h2,
    h3 {
      color: lightgreen;
      text-align: center;
      margin-top: 30px;
    }
    label{
      font-size:18px;
    }
    .section {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #111;
      border-radius: 5px;
      margin-top: 30px;
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    select {
      margin-bottom:25px;
      width: 100%;
      padding: 5px;
      border-radius: 3px;
      border: none;
      background-color: #222;
      color: #fff;
    }

    input[type="submit"],
    button {

      padding: 10px 20px;
      background-color: #4CAF50;
      color: black;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover,
    button:hover {
      background-color: lightgreen;
    }

    option[disabled] {
      color: #888;
    }

    .section {
      margin-bottom: 20px;
    }

    .section label {
      margin-bottom: 5px;
    }

    .section .input-group {
      display: flex;
    }

    .section .input-group-addon {
      background-color: #222;
      color: #fff;
      padding: 5px 10px;
      border-radius: 3px;
      border: none;
    }

    @media (max-width: 768px) {
      form {
        padding: 10px;
      }
    }

    .navbar{
      margin-bottom:50px;
      background: #1A1A1A;
    }
    .navbar-brand {
      color:lightgreen;
      font-weight: bold;
      font-size: 2rem;
    }

    .nav-link {
      color:lightgreen;
      font-weight: bold;
      font-size: 1.2rem;
      margin-left: 1.5rem;
    }
    .nav-link:hover {
      color:green;
    }
    .navbar-brand:hover{
      color:green;
    }

    @media (max-width: 768px) {
      .navbar-nav {
        flex-direction: column;
        align-items: center;
      }

      .nav-link {
        margin-left: 0;
        margin-top: 1rem;
      }
    }

    /* footer css */

    footer {
        background: #3e8e41;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 60px 0;
      margin-top:50px;
    }

    #footer .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .social-icons {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
    }

    .social-icons a {
      color: #333333;
      font-size: 24px;
      margin-right: 10px;
      transition: color 0.3s ease-in-out;
    }

    .social-icons a:hover {
      color: white;
    }

    #footer p {
      margin: 0;
      font-size: 18px;
      color: #333333;
    }

    @media screen and (max-width: 768px) {
      /* adjust layout for smaller screens */
      #footer h1 {
        font-size: 36px;
      }

      #footer h2 {
        font-size: 20px;
      }

      /* form.ev {
        margin: 20px 15px;
        max-width: 400px;
      }
     */
      /* adjust button styles */
      #footer button {
        padding: 8px 16px;
        font-size: 14px;
      }

      /* adjust footer styles */
      .social-icons {
        margin-bottom: 20px;
      }

      #footer p {
        font-size: 16px;
      }
    }
  </style>
